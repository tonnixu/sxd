    <select id="selectUserPrivateVo" resultMap="BaseResultMap_Private"
            parameterType="java.lang.Integer">

        SELECT
        p.phone,
        p.blacklist,
        p.source,
        p.create_date,
        c.card_num,
        c.`name`,
        c.birthday,
        c.address,
        r.id,
        r.per_id,
        r.qq_num,
        r.email,
        r.usuallyaddress,
        r.education,
        r.marry,
        r.getchild,
        r.profession,
        r.monthlypay,
        r.business,
        r.busi_province,
        r.busi_city,
        r.busi_address,
        r.busi_phone,
        r.relatives,
        r.relatives_name,
        r.rela_phone,
        r.society,
        r.soci_phone,
        r.society_name,
        r.update_date,
        r.sync,
        q.meaning AS
        source_value,
        v.meaning AS relatives_value,
        w.meaning AS society_value
        FROM
        b_person AS p
        LEFT JOIN card AS c ON p.id = c.per_id
        LEFT JOIN
          b_private  AS r ON p.id = r.per_id
        LEFT JOIN c_code_value AS q ON
        p.source = q.code_code AND q.code_type =
        'register_source'
        LEFT JOIN
        c_code_value AS v ON r.relatives = v.code_code AND v.code_type
        =
        'relatives'
        LEFT JOIN c_code_value AS w ON r.society = w.code_code AND
        w.code_type =
        'society'
        where p.id = #{_parameter}
    </select>

    <select id="getCardPicById" resultType="com.jhh.dc.loan.entity.manager_vo.CardPicInfoVo"
            parameterType="java.lang.Integer">
        SELECT
        c.per_id AS perId,
        z.image_type AS imageTypeZ,
        z.image_format AS imageFormatZ,
        z.image AS imageZ,
        f.image_type AS
        imageTypeF,
        f.image_format AS imageFormatF,
        f.image AS imageF,
        c.id AS
        id,
        z.image_url AS image_urlZ,
        f.image_url AS image_urlF
        FROM
        card AS c
        INNER JOIN image AS z ON c.card_photoz = z.id
        INNER
        JOIN image AS
        f ON c.card_photof = f.id
        WHERE c.per_id =
        #{_parameter} AND c.id =
        (SELECT MAX(c.id) FROM card AS
        t WHERE
        t.per_id = #{_parameter})

    </select>

    <select id="selectLoanInfoPrivateVo" resultMap="BaseResultMap_loaninfo"
            parameterType="java.lang.Integer">

        SELECT
        l.id,
        l.borr_num,
        t.maximum_amount,
        v.meaning,
        r.repay_date,
        IFNULL((SELECT amount FROM per_coupon WHERE id = l.per_coupon_id),0) amount,
        l.makeborr_date,
        p.product_name,
        bm.description,
        bm.is_manual
        FROM
        b_borrow_list AS l
        INNER JOIN
        c_product AS p ON l.prod_id = p.id
        INNER JOIN product_term AS t ON
        p.id = t.product_id
        INNER JOIN c_code_value AS v ON l.borr_status =
        v.code_code AND
        v.code_type = "borr_status"
        LEFT JOIN b_repayment_plan
        AS r ON l.id = r.borrow_id
        LEFT  JOIN borrow_manual as bm
        on bm.borr_id = l.id
        WHERE
        l.per_id = #{_parameter}
        ORDER BY
        l.id
        DESC
    </select>

    <select id="selectLoanInfoPrivateVoForOperator" parameterType="Integer" resultType="com.jhh.dc.loan.entity.manager_vo.ZloanInfoVo">
        SELECT b.id AS id, b.borr_num AS borrNum, p.product_name AS productName , b.borr_status AS borrStatus , b.askborr_date AS askborrDate,
        b.makeborr_date  AS makeborrDate ,b.pay_date AS payDate, t.maximum_amount AS maximumAmount ,b.planrepay_date AS planrepayDate,
        b.plan_repay AS planRepay , b.act_repay_date AS actRepayDate , b.act_repay_amount AS actRepayAmount
        FROM b_borrow_list b  LEFT JOIN c_product p ON b.prod_id  = p.id
        INNER JOIN product_term t ON t.product_id  =p.id
        WHERE b.per_id  = #{_parameter}
        ORDER BY b.id DESC
    </select>

